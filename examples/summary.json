{
    "name": "HKJC Race Summary Extractor",
    "pattern": "(?i)racing/information/chinese/Racing/Summary.aspx",
    "example_url": "https://racing.hkjc.com/racing/information/Chinese/Racing/Summary.aspx",
    "schemas": [
        {
            "name": "race_summary",
            "entity_type": "race_summary",
            "selector": "//div[contains(@class,'data_tab')]",
            "type": "nested",
            "fields": [
                {
                    "name": "_id",
                    "from": "element",
                    "selector": ".//div[@class='data_meeting']//div[1]",
                    "pattern": "(?i)(\\d+/\\d+/\\d+)"
                },
                {
                    "name": "race_datetime",
                    "selector": ".//div[@class='data_meeting']//div",
                    "type": "list",
                    "fields": [
                        {
                            "name": "text",
                            "selector": ".",
                            "type": "text"
                        }
                    ]
                },
                {
                    "name": "race_track_info",
                    "selector": ".//div[@class='data_go']",
                    "type": "text"
                },
                {
                    "name": "race_stewards_info",
                    "selector": ".//div[@class='data_Stewards']",
                    "type": "text"
                }
            ]
        }
    ]
} 